<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('head', {}); %>
</head>
<body>
    <%- include('header', {select: 2, projectName: project.name}); %>

    <div class="title">Nouvelle Tâche</div>
    <form class="form" action="/task"  method="post">
        <div class="group">
            <div class="subtitle">Type</div>
            <select class="elements text" name="type" id="type">
                <option value='0'>TDES</option>
                <option value='1'>TTES</option>
                <option value='2'>TDEV</option>
                <option value='3'>TOPT</option>
                <option value='4'>TBUG</option>
            </select>
        </div>
        <div class="group">
            <div class="subtitle">Nom</div>
            <input class="elements text" type="text" name="name" id="name">
        </div>
        <div class="group">
            <div class="subtitle">Description</div>
            <textarea class="elements text" name="description" id="description" rows="10"></textarea>
        </div>
        <div class="group">
            <div class="subtitle">UserStory</div>
            <select class="elements text" name="userStory" id="userStory">
                <option></option>
                <% userStories.forEach(function(userStory) {%>
                    <option value="<%=userStory._id%>"><%=userStory.name%></option>
                <%})%>
            </select>
        </div>
        <div class="group">
            <div class="subtitle">Charge estimée</div>
            <input class="elements text" type="number" name="timeEstimation" id="timeEstimation">
        </div>
        <div class="group">
            <div class="subtitle">Dépendances</div>
            <select class="elements text" name="dependencies" id="dependencies">
                <option></option>
                <% tasks.forEach(function(task) {%>
                    <option value="<%=task._id%>"><%=task.id%></option>
                <%})%>
            </select>
        </div>
        <div class="group">
            <a href="/task?projectId=<%= project.id %>" class="button reject m-2 p-2" id="rejectForm">Annuler</a>
            <input type="submit" class="button valid m-2 p-2" value="Valider" id="validForm">
        </div>
    </form>

    <%- include('footer', {}); %>
</body>
</html>
